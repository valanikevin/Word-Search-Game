<Page x:Class="KevinValaniMidTerm.HowTo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:KevinValaniMidTerm"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HowTo" Loaded="Page_Loaded">

    <Grid Background="#FF444466">
        <Grid.RowDefinitions>
            <RowDefinition Height="149*"/>
            <RowDefinition Height="301*"/>
        </Grid.RowDefinitions>
        <Grid Background="Black" Margin="20,50,20,20">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Background="Black">
                <Label Content="How To Use This Application?" FontSize="25" Foreground="White" FontWeight="Bold" VerticalAlignment="Center" Padding="5"/>
            </StackPanel>
        </Grid>
        <StackPanel Grid.Row="1">
            <TextBox x:Name="txtHelp" Background="#FF444466" Foreground="White" FontSize="14" TextAlignment="Center" Padding="15" FontWeight="Bold" TextWrapping="Wrap" Width="522" Height="247" BorderThickness="0,0,0,0" AcceptsReturn="True" AcceptsTab="True" IsReadOnly="True"/>
        </StackPanel>

    </Grid>
</Page>
